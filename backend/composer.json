{
    "name": "rates-api/assessment",
    "description": "Rates API Assessment Backend",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "guzzlehttp/guzzle": "^7.0",
        "vlucas/phpdotenv": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "RatesApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RatesApi\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests/",
        "serve": "php -S localhost:8000 -t src/"
    },
    "config": {
        "optimize-autoloader": true
    }
}